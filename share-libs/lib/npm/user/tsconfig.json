{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2020",
    "module": "CommonJS",
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node"
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
