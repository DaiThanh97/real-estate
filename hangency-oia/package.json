{
  "name": "halato-agency",
  "version": "1.0.0",
  "description": "Halato Agency backend project",
  "main": "dist/index.js",
  "scripts": {
    "serve:db": "docker run --rm --name db_machine_local -p 5432:5432 -e POSTGRES_PASSWORD=local -d postgres 2>/dev/null || exit 0",
    "dev": "npm run nodemon:build",
    "dev:swagger": "SWAGGER_FILE_GENERATION=true npm run nodemon:build",
    "build": "tsc -p .",
    "start-dev": "ts-node src/index.ts",
    "start": "npm run typeorm:migrate && node dist/index.js",
    "nodemon:build": "nodemon --exec ./node_modules/.bin/ts-node -- src/index.ts",
    "format:code": "eslint \"*/**/*.{ts,js}\" --fix && prettier \"**/*.{js,ts}\" --write",
    "format:yaml": "prettier \"**/*.{yaml,yml}\" --parser yaml --write --tab-width 2",
    "format:json": "prettier \"**/*.json\" --parser json --write",
    "format:md": "prettier \"**/*.md\" --parser markdown --write",
    "format": "npm run format:code && npm run format:yaml && npm run format:json && npm run format:md",
    "test": "jest --runInBand --watch",
    "test:run-domains": "jest --collect-coverage --watch src/domains",
    "test:run-application": "jest --collect-coverage --watch src/application",
    "test:run-infrastructure": "jest --collect-coverage --watch --runInBand src/infrastructure",
    "test:report": "JEST_JUNIT_OUTPUT_DIR=./reports/junit JEST_HTML_REPORTER_OUTPUT_PATH=./reports/html/test-report.html jest --collect-coverage --ci --runInBand --reporters=default --reporters=jest-junit --reporters=jest-html-reporter",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "typeorm:migrate": "npm run typeorm migration:run",
    "typeorm:generate-migration": "npm run typeorm migration:generate -- -n $npm_config_name",
    "typeorm:create-migration": "npm run typeorm migration:create -- -n $npm_config_name",
    "typeorm:revert": "npm run typeorm migration:revert"
  },
  "private": true,
  "engines": {
    "node": ">=12.0",
    "npm": ">=6.12"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ]
  },
  "dependencies": {
    "@halato/user": "1.0.3",
    "@hapi/boom": "^9.1.1",
    "@hapi/bossy": "^5.0.1",
    "@hapi/hapi": "^20.0.3",
    "@hapi/inert": "^6.0.3",
    "@hapi/vision": "^6.0.1",
    "@types/bcrypt": "^3.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.168",
    "@types/mime-db": "^1.43.0",
    "@types/nunjucks": "^3.1.3",
    "@types/socket.io": "^2.1.12",
    "@types/underscore": "^1.10.24",
    "@types/uuid": "^8.3.1",
    "@types/yamljs": "^0.2.31",
    "aws-sdk": "^2.765.0",
    "bcrypt": "^5.0.0",
    "casbin": "^5.4.2",
    "chalk": "^4.1.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "core-js": "^3.6.5",
    "firebase-admin": "^9.4.2",
    "hapi-auth-jwt2": "^10.2.0",
    "hapi-pulse": "^3.0.0",
    "hapi-swagger": "^14.0.0",
    "hapijs-status-monitor": "^1.0.1",
    "joi": "^17.3.0",
    "js-base64": "^3.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "nunjucks": "^3.2.2",
    "pg": "^8.5.0",
    "reflect-metadata": "^0.1.13",
    "snyk": "^1.388.0",
    "socket.io": "^2.3.0",
    "tslib": "^2.1.0",
    "typedi": "^0.10.0",
    "typeorm": "^0.2.32",
    "typeorm-adapter": "^1.2.0",
    "underscore": "^1.11.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "winston-logzio": "^5.1.2",
    "yamljs": "^0.3.0",
    "yargonaut": "^1.1.4",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "jest-junit": "^12.0.0",
    "jest-html-reporter": "^3.3.0",
    "@commitlint/cli": "^9.1.2",
    "@hapi/code": "^8.0.2",
    "@hapi/lab": "^23.0.0",
    "@types/async": "^3.2.3",
    "@types/code": "^4.0.5",
    "@types/dotenv": "^8.2.0",
    "@types/eslint": "^7.2.2",
    "@types/faker": "^5.1.0",
    "@types/hapi__hapi": "^20.0.3",
    "@types/hapi__inert": "^5.2.2",
    "@types/hapi__joi": "^17.1.6",
    "@types/hapi__vision": "^5.5.2",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.10.1",
    "@types/socket.io-parser": "^3.0.0",
    "@types/supertest": "^2.0.11",
    "@types/tape": "^4.13.0",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "code": "^5.2.4",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "faker": "^5.1.0",
    "jest": "^26.6.3",
    "jest-mock-extended": "^1.0.13",
    "lab": "^18.0.2",
    "lint-staged": "^10.3.0",
    "mockdate": "^3.0.2",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "supertest": "^4.0.2",
    "tap": "^14.10.8",
    "tap-spec": "^5.0.0",
    "tape": "^5.0.1",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.2.3",
    "typescript-eslint": "0.0.1-alpha.0"
  }
}
